{
  "expo": {
    "name": "nifty-mobile",
    "slug": "nifty-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-image-picker",
        "expo-media-library",
        {
          "photosPermission": "Allow Nifty to access your photos",
          "cameraPermission": "Allow Nifty to access your camera.",
          "cameraRollPermission": "Allow Nift to access your camera roll.",
          "savePhotosPermission": "Allow Nifty to save photos."
        }
      ]
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#8503ff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
